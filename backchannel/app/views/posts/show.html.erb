<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Message:</strong>
  <%= @post.message %>
</p>

<p>
  <strong>Category:</strong>
  <%= @category_name %>
</p>

<p>
  <strong>Votes:</strong>
  <%= Vote.where(:post_id => @post.id).count %>
</p>

<p>
  <strong>By:</strong>
  <%= @user_name %>
</p>

<p>
  <%= link_to "Up Vote", up_vote_post_path(@post.id) %>
  <%= link_to "Edit", edit_post_path %>
  <%= link_to "Delete", post_path, :method => :delete  %>
  <%= link_to "New", new_post_path %>
  <%= link_to "Post list", posts_path %>
</p>
