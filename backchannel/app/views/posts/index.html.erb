<h1>Post List</h1>

<table>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post_path(post) %></td>
      <td><%= post.user %></td>
      <td><%= link_to "Edit", edit_post_path(post)  %></td>
      <td><%= link_to "Delete", post_path(post), :method => :delete %></td>
    <tr>
  <% end %>
</table>
