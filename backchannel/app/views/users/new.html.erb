<h1>New User</h1>

<%= form_for :user, url: users_path do |f| %>
  <p>
    <%= f.label :user_name %><br>
    <%= f.text_field :user_name %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </p>

  <p>
    <%= f.label :confirm_password %><br>
    <%= f.text_field :confirm_password %>
  </p>

  <p>
    <%= f.label :rights %><br>
    <%= f.select :rights, [["User", "user"], ["Admin", "admin"], ["Super Admin", "super"]] %>
  </p>

  <p>
    Already have an account? <%= link_to "Login!", login_user_path %>
  <p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
