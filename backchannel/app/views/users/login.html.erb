<h1>Login</h1>

<%= form_for :user, url: users_path do |f| %>
  <p>
    <%= f.label :user_name %><br>
    <%= f.text_field :user_name %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </p>

  <p>
    Don't have an account? <%= link_to "Sign up!", signup_user_path %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
